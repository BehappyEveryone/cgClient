<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
            android:id="@+id/P_logoutbutton"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:background="@drawable/exit"
            app:layout_constraintBottom_toBottomOf="@id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="45dp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
            android:id="@+id/backcolor"
            android:layout_width="0dp"
            android:layout_height="210dp"
            android:background="@color/sky"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"></FrameLayout>

    <ImageButton
            android:id="@+id/P_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/imageboder"
            android:scaleType="fitXY"
            android:src="@drawable/defaultprofile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/backcolor" />

    <TextView
            android:id="@+id/P_nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="닉네임"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/P_image"
            app:layout_constraintWidth_max="250dp" />

    <TextView
            android:id="@+id/P_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="이메일"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/P_nickname"
            app:layout_constraintWidth_max="300dp" />

    <TextView
            android:id="@+id/P_myintruducetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="나의 한마디"
            android:textSize="13dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backcolor" />

    <TextView
            android:id="@+id/P_myintruduce"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginRight="5dp"
            android:hint="자기소개 한마디"
            android:singleLine="true"
            android:textSize="15dp"
            app:layout_constraintEnd_toStartOf="@+id/P_Editmyintruduce"
            app:layout_constraintStart_toStartOf="@id/P_myintruducetext"
            app:layout_constraintTop_toBottomOf="@id/P_myintruducetext" />

    <ImageButton
            android:id="@+id/P_Editmyintruduce"
            android:layout_width="25dp"
            android:layout_height="0dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/ic_mode_edit"
            app:layout_constraintBottom_toBottomOf="@+id/P_myintruduce"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/P_myintruduce" />

    <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/P_Editmyintruduce"
            app:layout_constraintStart_toStartOf="@+id/P_myintruduce"
            app:layout_constraintTop_toBottomOf="@+id/P_myintruduce" />

    <TextView
            android:id="@+id/P_Interesttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="관심사"
            android:textSize="13dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

    <Spinner
            android:id="@+id/P_Interest1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:entries="@array/interest"
            app:layout_constraintStart_toStartOf="@id/P_Interesttext"
            app:layout_constraintTop_toBottomOf="@id/P_Interesttext" />

    <View
            android:id="@+id/view3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/P_Interest1"
            app:layout_constraintStart_toStartOf="@+id/P_Interest1"
            app:layout_constraintTop_toBottomOf="@+id/P_Interest1" />

    <Spinner
            android:id="@+id/P_Interest2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:entries="@array/interest"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/P_Interesttext" />

    <View
            android:id="@+id/view4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/P_Interest2"
            app:layout_constraintStart_toStartOf="@+id/P_Interest2"
            app:layout_constraintTop_toBottomOf="@+id/P_Interest2" />

    <Spinner
            android:id="@+id/P_Interest3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginRight="20dp"
            android:entries="@array/interest"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/P_Interesttext" />

    <View
            android:id="@+id/view5"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/P_Interest3"
            app:layout_constraintStart_toStartOf="@+id/P_Interest3"
            app:layout_constraintTop_toBottomOf="@+id/P_Interest3" />

    <TextView
            android:id="@+id/P_myforums"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="게시판"
            android:textSize="13dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/P_Interest1" />

    <Button
            android:id="@+id/P_myforumsbutton"
            style="?android:attr/borderlessButtonStyle"

            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/button1"
            android:hint="내가 쓴 글"
            android:textSize="15dp"
            app:layout_constraintEnd_toStartOf="@+id/view7"
            app:layout_constraintStart_toStartOf="@id/P_myforums"
            app:layout_constraintTop_toBottomOf="@id/P_myforums" />

    <View
            android:id="@+id/view7"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/P_mycommentbutton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/button1"
            android:hint="내가 쓴 댓글"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/view7"
            app:layout_constraintTop_toBottomOf="@id/P_myforums" />

    <View
            android:id="@+id/view6"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/P_myforumsbutton" />

    <Button
            android:id="@+id/P_save"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button2"
            android:text="프로필 저장"
            android:textColor="@color/button2color"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
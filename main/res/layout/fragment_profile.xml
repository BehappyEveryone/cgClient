<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="프로필"
            app:layout_constraintBottom_toBottomOf="@+id/view" android:id="@+id/textView3"/>

    <ImageButton
            android:id="@+id/P_logoutbutton"
            android:background="@drawable/exit"
            app:layout_constraintBottom_toBottomOf="@id/view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="50dp"
            android:layout_height="0dp"/>
    <View
            android:layout_marginTop="45dp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" android:id="@+id/view"/>

    <FrameLayout
            android:id="@+id/backcolor"
            android:background="@color/sky"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="0dp"
            android:layout_height="210dp">
    </FrameLayout>

    <ImageButton
            android:scaleType="fitXY"
            android:src="@drawable/defaultprofile"
            android:background="@drawable/imageboder"
            android:id="@+id/P_image"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="@id/backcolor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="90dp"
            android:layout_height="90dp"/>
    
    <TextView
            android:id="@+id/P_nickname"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/P_image"
            app:layout_constraintWidth_max="250dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center"
            android:text="닉네임"
            android:textSize="20dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/P_email"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/P_nickname"
            app:layout_constraintWidth_max="300dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center"
            android:text="이메일"
            android:textSize="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/P_myintruducetext"
            android:text="나의 한마디"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backcolor"
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:singleLine="true"
            android:id="@+id/P_myintruduce"
            android:layout_marginTop="7dp"
            android:hint="자기소개 한마디"
            android:layout_marginRight="5dp"
            app:layout_constraintEnd_toStartOf="@+id/P_Editmyintruduce"
            app:layout_constraintStart_toStartOf="@id/P_myintruducetext"
            app:layout_constraintTop_toBottomOf="@id/P_myintruducetext"
            android:textSize="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <ImageButton
            android:id="@+id/P_Editmyintruduce"
            android:layout_marginRight="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/P_myintruduce"
            app:layout_constraintBottom_toBottomOf="@+id/P_myintruduce"
            android:background="@drawable/ic_mode_edit"
            android:layout_width="25dp"
            android:layout_height="0dp"/>

    <View
            android:layout_marginTop="5dp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="@+id/P_myintruduce"
            app:layout_constraintEnd_toEndOf="@+id/P_Editmyintruduce"
            app:layout_constraintTop_toBottomOf="@+id/P_myintruduce"
            android:layout_width="0dp"
            android:layout_height="1dp" android:id="@+id/view2"/>

    <TextView
            android:id="@+id/P_Interesttext"
            android:text="관심사"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2"
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Spinner
            android:entries="@array/interest"
            android:id="@+id/P_Interest1"
            android:layout_marginTop="7dp"
            app:layout_constraintStart_toStartOf="@id/P_Interesttext"
            app:layout_constraintTop_toBottomOf="@id/P_Interesttext"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>

    <View
            android:layout_marginTop="5dp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="@+id/P_Interest1"
            app:layout_constraintEnd_toEndOf="@+id/P_Interest1"
            app:layout_constraintTop_toBottomOf="@+id/P_Interest1"
            android:layout_width="0dp"
            android:layout_height="1dp" android:id="@+id/view3"/>

    <Spinner
            android:entries="@array/interest"
            android:id="@+id/P_Interest2"
            android:layout_marginTop="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/P_Interesttext"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>

    <View
            android:layout_marginTop="5dp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="@+id/P_Interest2"
            app:layout_constraintEnd_toEndOf="@+id/P_Interest2"
            app:layout_constraintTop_toBottomOf="@+id/P_Interest2"
            android:layout_width="0dp"
            android:layout_height="1dp" android:id="@+id/view4"/>

    <Spinner
            android:entries="@array/interest"
            android:layout_marginRight="20dp"
            android:id="@+id/P_Interest3"
            android:layout_marginTop="7dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/P_Interesttext"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>

    <View
            android:layout_marginTop="5dp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="@+id/P_Interest3"
            app:layout_constraintEnd_toEndOf="@+id/P_Interest3"
            app:layout_constraintTop_toBottomOf="@+id/P_Interest3"
            android:layout_width="0dp"
            android:layout_height="1dp" android:id="@+id/view5"/>

    <TextView
            android:id="@+id/P_myforums"
            android:text="게시판"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/P_Interest1"
            android:textSize="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button
            android:background="@drawable/button1"
            android:id="@+id/P_myforumsbutton"
            android:layout_marginTop="7dp"
            android:hint="내가 쓴 글"
            app:layout_constraintStart_toStartOf="@id/P_myforums"
            app:layout_constraintTop_toBottomOf="@id/P_myforums"
            android:textSize="15dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/view7"/>

    <View
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="1dp"
            android:layout_height="1dp" android:id="@+id/view7"/>
    <Button
            android:background="@drawable/button1"
            android:id="@+id/P_mycommentbutton"
            android:layout_marginRight="20dp"
            android:layout_marginTop="7dp"
            android:hint="내가 쓴 댓글"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/P_myforums"
            android:textSize="15dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/view7"/>

    <View
            android:layout_marginTop="5dp"
            android:background="@color/black"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toBottomOf="@+id/P_myforumsbutton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="0dp"
            android:layout_height="1dp" android:id="@+id/view6"/>

    <Button
            android:textColor="@color/button2color"
            android:background="@drawable/button2"
            android:text="프로필 저장"
            android:textSize="30dp"
            android:layout_marginBottom="20dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/P_save"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>
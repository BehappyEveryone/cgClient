<?xml version="1.0" encoding="UTF-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".view.chat">

    <View
            android:background="@color/sky"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/chatTitle"
            app:layout_constraintTop_toTopOf="@+id/chatTitle"
            android:layout_width="0dp"
            android:layout_height="0dp"/>
    <TextView
            android:paddingLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/chatTime"
            android:id="@+id/chatTitle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center|start"
            android:text="채팅 방"
            android:textSize="20dp"/>

    <TextView
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/timetedury"
            android:id="@+id/chatTime"
            android:gravity="center"
            android:textSize="15dp"
            android:text="00:00"
            app:layout_constraintBottom_toBottomOf="@+id/chatTitle"
            app:layout_constraintTop_toTopOf="@+id/chatTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="90dp"
            android:layout_height="0dp"
            android:layout_marginRight="10dp"/>

    <ImageButton
            android:layout_marginRight="15dp"
            android:background="@drawable/exit"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:id="@+id/chatexit"
            app:layout_constraintBottom_toBottomOf="@+id/chatTitle"
            app:layout_constraintTop_toTopOf="@+id/chatTitle"
            app:layout_constraintEnd_toStartOf="@+id/chatdraweropen"
            android:layout_width="50dp"
            android:layout_height="0dp"/>

    <ImageButton
            android:background="@drawable/ic_menu_black"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:id="@+id/chatdraweropen"
            app:layout_constraintBottom_toBottomOf="@+id/chatTitle"
            app:layout_constraintTop_toTopOf="@+id/chatTitle"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="50dp"
            android:layout_height="0dp"/>

    <TextView
            android:layout_marginTop="1dp"
            android:textSize="16dp"
            android:gravity="center"
            android:background="@drawable/subjectborder"
            android:id="@+id/chatSubject"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chatTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/chatRecycle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toTopOf="@+id/chatinputMessage"
            app:layout_constraintTop_toBottomOf="@+id/chatSubject"></android.support.v7.widget.RecyclerView>

    <LinearLayout
            android:visibility="gone"
            android:layout_margin="10dp"
            android:id="@+id/chatOpinion"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/chatSubject"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="80dp">

        <Button
                android:id="@+id/chatagree"
                android:textSize="30dp"
                android:text="찬성"
                android:layout_marginRight="5dp"
                android:background="@drawable/button5"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        <Button
                android:id="@+id/chatoppose"
                android:textSize="30dp"
                android:text="반대"
                android:layout_marginLeft="5dp"
                android:background="@drawable/button6"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </LinearLayout>

    <View
            android:id="@+id/chatwhite"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chatRecycle"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

    <ImageButton
            android:id="@+id/chatplus"
            android:background="@drawable/plusicon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <EditText
            android:id="@+id/chatinputMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxHeight="130dp"
            android:scrollbars="vertical"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/chatsendMessage"
            app:layout_constraintStart_toEndOf="@+id/chatplus"/>

    <ImageButton
            android:layout_marginRight="5dp"
            android:background="@drawable/sendicon"
            android:id="@+id/chatsendMessage"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="게시판"
            app:layout_constraintBottom_toBottomOf="@+id/view" android:id="@+id/textView3"/>

    <View
            android:layout_marginTop="45dp"
            android:background="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0.5dp" android:id="@+id/view"/>

    <ImageButton
            android:background="@drawable/forums_serarch_icon"
            android:id="@+id/F_serarchbutton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"/>

    <View
            android:background="@color/black"
            app:layout_constraintTop_toTopOf="@id/F_serarchbutton"
            app:layout_constraintBottom_toBottomOf="@id/F_serarchbutton"
            app:layout_constraintStart_toEndOf="@id/F_writebutton"
            app:layout_constraintEnd_toStartOf="@id/F_serarchbutton"
            android:layout_width="0.5dp"
            android:layout_height="28dp" android:id="@+id/view2"/>

    <View
            android:background="@color/black"
            app:layout_constraintTop_toTopOf="@id/F_serarchbutton"
            app:layout_constraintBottom_toBottomOf="@id/F_serarchbutton"
            app:layout_constraintStart_toEndOf="@id/F_bestforumsbutton"
            app:layout_constraintEnd_toStartOf="@id/F_writebutton"
            android:layout_width="0.5dp"
            android:layout_height="28dp" android:id="@+id/view3"/>

    <ImageButton
            android:layout_marginRight="5dp"
            android:background="@drawable/forums_write_icon"
            android:id="@+id/F_writebutton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toStartOf="@id/F_serarchbutton"/>

    <ImageButton
            android:layout_marginRight="5dp"
            android:background="@drawable/forums_bestforums_icon"
            android:id="@+id/F_bestforumsbutton"
            android:layout_width="27dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toStartOf="@id/F_writebutton"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/F_forumRecy"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp">
    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>
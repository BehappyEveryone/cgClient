<?xml version="1.0" encoding="UTF-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="3dp"
                                    android:layout_marginLeft="3dp"
                                    android:layout_marginEnd="3dp"
                                    android:layout_marginRight="3dp"
                                    android:layout_marginBottom="3dp"
                                    android:id="@+id/CI_card"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    app:cardElevation="6dp">

    <android.support.constraint.ConstraintLayout
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageButton
                android:background="@null"
                android:id="@+id/CI_profile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/defaultprofile"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/CI_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:ellipsize="end"
                android:maxWidth="200dp"
                android:maxLines="1"
                android:text="닉네임"
                android:textSize="15dp"
                app:layout_constraintStart_toEndOf="@id/CI_profile"
                app:layout_constraintTop_toTopOf="@+id/CI_profile" />
        <TextView
                android:paddingHorizontal="5dp"
                android:gravity="center|start"
                android:id="@+id/CI_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:singleLine="false"
                android:textSize="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/CI_image"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:id="@+id/CI_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxWidth="220dp"
                android:maxLines="1"
                android:textSize="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
                android:layout_marginTop="10dp"
                android:id = "@+id/CI_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/CI_profile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        <Button
                android:layout_marginTop="10dp"
                android:id="@+id/CI_writerecomment"
                android:background="@drawable/tedury2"
                app:layout_constraintTop_toBottomOf="@+id/CI_content"
                app:layout_constraintStart_toStartOf="@+id/CI_profile"
                android:textSize="10dp"
                android:text="답장"
                android:layout_width="35dp"
                android:layout_height="20dp"/>

        <android.support.constraint.ConstraintLayout
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:id="@+id/CI_bottom"
                app:layout_constraintTop_toBottomOf="@+id/CI_writerecomment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageButton
                    android:scaleType="fitXY"
                    android:id="@+id/CI_recommentcamera"
                    android:background="@drawable/writeforum_camera_icon"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:id="@+id/CI_recommentmessage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxHeight="130dp"
                    android:scrollbars="vertical"
                    app:layout_constraintEnd_toStartOf="@id/CI_recommentsend"
                    app:layout_constraintStart_toEndOf="@id/CI_recommentcamera"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textSize="18dp"/>

            <ImageButton
                    android:layout_marginRight="5dp"
                    android:background="@drawable/sendicon"
                    android:id="@+id/CI_recommentsend"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>